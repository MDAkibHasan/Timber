@using TimberV2.Models;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>complete responsive plant selling website design tutorial</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- custom css file link  -->
   
    <link href="@Url.Content("~/Content/homePage.css")" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="universal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body style="background: #CFFDE1;">
    <div style="margin-top:5rem;"></div>

    <p>
        <button class="btn btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            <i class="fa-solid fa-filter"></i> Filter
        </button>
    </p>
    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <table>
                <thead>
                    <tr>
                        <th scope="col">Price Range</th>
                        <th scope="col">Sort By</th>
                        <th scope="col">Category</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <label>Min Price</label>
                            <input style="font-size: small; width: 5rem;" type="number" min="" max="" value="">
                            <label>Max Price</label>
                            <input style="font-size: small; width: 5rem;" type="number" min="" max="" value="">


                        </td>
                        <td>
                            <!-- Default radio -->
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked />
                                <label class="form-check-label" for="flexRadioDefault1"> Default </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" />
                                <label class="form-check-label" for="flexRadioDefault2">
                                    <i class="fa-solid fa-arrow-down-a-z"></i> Alphabetical Order (Ascending)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3" />
                                <label class="form-check-label" for="flexRadioDefault3">
                                    <i class="fa-solid fa-arrow-up-a-z"></i> Alphabetical Order (Descending)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault4" />
                                <label class="form-check-label" for="flexRadioDefault4">
                                    <i class="fa-solid fa-arrow-down"></i><i class="fa-solid fa-bangladeshi-taka-sign"></i> Price Order (Ascending)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault5" />
                                <label class="form-check-label" for="flexRadioDefault5">
                                    <i class="fa-solid fa-arrow-up"></i><i class="fa-solid fa-bangladeshi-taka-sign"></i> Price Order (Descending)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault6" />
                                <label class="form-check-label" for="flexRadioDefault6">
                                    <i class="fa-solid fa-arrow-down"></i><i class="fa-solid fa-clock"></i> Arrival Time Order (Ascending)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault7" />
                                <label class="form-check-label" for="flexRadioDefault7">
                                    <i class="fa-solid fa-arrow-up"></i><i class="fa-solid fa-clock"></i> Arrival Time Order (Descending)
                                </label>
                            </div>
                        </td>
                        <td>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <!-- Default checked -->
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="check1" checked>
                                        <label class="custom-control-label" for="check1">All Category</label>
                                    </div>
                                </li>
                                @foreach (var cat in Model.CategoryView)
                                {
                                    <li class="list-group-item">
                                        <!-- Default checked -->
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="check2">
                                            <label class="custom-control-label" for="check2">@cat.CategoryName</label>
                                        </div>
                                    </li>}

                            </ul>
                        </td>
                    </tr>

                </tbody>
            </table>

            <button type="button" class="btn btn-outline-success mx-auto" style="float: right;">Apply</button>
        </div>
    </div>
    @foreach (var cat in Model.CategoryView)
    {
            <!-- product section starts  -->
            <section class="product" id="product">



                <h1 class="heading"> @cat.CategoryName </h1>
                <div class="box-container">

                    @foreach (var item in Model.ItemView)
                    {
                        if (cat.CategoryID == item.CategoryID)
                        {

                    <div class="box">

                        @{
                            Html.RenderAction("ShowDiscount", "Items", new { @id = item.ItemID });
                        }
                        <div class="icons">
                            <a href="@Url.Action("ViewProductDetail", "Items", new { @id = item.ItemID })" class="fas fa-eye"></a>
                        </div>

                        <img src="~/Content/up/@item.ItemArt" alt="">
                        <span class="badge bg-secondary" style="margin-left: -82%; font-size: small; padding-bottom: 5px; padding-left: 20px;">@item.Category.CategoryName</span>


                        <div class="quantity">
                            <span> quantity : </span>
                            <input type="number" min="0" max="@item.ItemQuantity" value="@item.ItemQuantity" readonly>
                        </div>
                        <div class="price">tk @item.ItemPrice</div>
                        <a href="@Url.Action("ViewProductDetail", "Items", new { @id = item.ItemID })" class="custom-btn">add to cart</a>
                    </div>
                        }
                    }
                </div>
            </section>
        }
        <!-- product section ends -->
        <!-- .icons section starts  -->
        <section class="icons-container">

            <div class="icon">
                <img src="images/icon2.png" alt="">
                <div class="content">
                    <h3>100% Money Back</h3>
                    <p>You’ve 30 days to Return</p>
                </div>
            </div>
            <div class="icon">
                <img src="images/icon3.png" alt="">
                <div class="content">
                    <h3>Payment Secure</h3>
                    <p>100% secure payment</p>
                </div>
            </div>
            <div class="icon">
                <img src="images/icon4.png" alt="">
                <div class="content">
                    <h3>Support 24/7</h3>
                    <p>Contact us anytime</p>
                </div>
            </div>
        </section>
        <!-- .icons section ends -->
        <!-- scroll top button  -->
        <a href="#home" class="scroll-top fas fa-angle-up"></a>










        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.0/js/bootstrap.min.js" integrity="sha512-8Y8eGK92dzouwpROIppwr+0kPauu0qqtnzZZNEF8Pat5tuRNJxJXCkbQfJ0HlUG3y1HB3z18CSKmUo7i2zcPpg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <!-- custom js file link  -->
        <script src="~/Content/homePage.js"></script>
    </body>
</html>