@model IEnumerable<TimberV2.Models.DraftCart>

@{
    
}










<body style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; background: #ffe3e2; ">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    </style>

    <div style="max-width: 1000px; margin: 0 auto;">
        <h1 style="padding: 10px 0; text-align: center; text-transform: uppercase;"> Shopping Cart </h1>
        <div style="display: flex;">
            <div style="flex: 75%;">


                @foreach (var item in Model)
                {
                <div style="display: flex; width: 100%; height: 40%;  margin-bottom: 20px; background: #fff;
                transition: all .6s ease; box-shadow: rgba(100, 100, 111, 0.2) 0 7px 29px 0;">
                    <img  style="height:170px; width:100px;padding:3px" src="~/Content/up/@item.Item.ItemArt" alt="">
                    <div style="padding: 20px; position: relative; width: 100%;">
                        <h5 style="margin-bottom: 40px;"> @item.Item.ItemName </h5>
                        <h6 style="margin-bottom: 30px;"> Unit Price: @item.Item.ItemPrice </h6>
                        <h6 style="margin-bottom: 30px;">Quantity: @item.Quantity </h6>
                        <a  href="@Url.Action("DeleteCartItem","DraftCarts",new { @id=item.CartID})">
                            <p style="position: absolute; bottom: 20px; right: 20px; padding: 10px 25px; background-color: #3a71a9;
                        color: #fff; cursor: pointer; border-radius: 10px; margin-right: 5px;">
                                <i class="fas fa-trash"></i>
                                Remove

                            </p>
                        </a>
                    </div>
                </div>

                }







             

            </div>

            <div style="flex: 25%; margin-left: 20px; padding: 20px; height: 400px; border-radius: 5px; background: #fff;
            box-shadow: rgba(100, 100, 111, 0.2) 0 7px 29px 0;">
                <p style="display: flex; justify-content: space-between; margin-bottom: 30px; font-size: 20px;">
                    <span>Subtotal</span> <span>@ViewData["sub_sum"]/-</span>
                </p>
                <p style="display: flex; justify-content: space-between; margin-bottom: 30px; font-size: 20px;">
                    <span>Discount Sum</span> <span>@ViewData["disc_sum"]/-</span>
                </p>
                <hr style="margin-bottom: 25px;">
                <p style="display: flex; justify-content: space-between; margin-bottom: 30px; font-size: 20px;">
                    <span>Shipping</span> <span>100/-</span>
                </p>
                <hr style="margin-bottom: 25px;">
                <p style="display: flex; justify-content: space-between; margin-bottom: 30px; font-size: 20px;">
                    <span>Total</span> <span>@ViewData["sum"]/-</span>
                </p>
                <hr style="margin-bottom: 25px;">
                <a style=" background-color: #76bfb6; color: #fff; text-decoration: none; display: block;
                text-align: center; height: 40px; line-height: 40px; font-weight: 900;" href="@Url.Action("PlaceOrder","Orders")">
                    <i class="fa fa-shopping-cart"></i> Checkout
                </a>
            </div>

        </div>
    </div>
</body>


















