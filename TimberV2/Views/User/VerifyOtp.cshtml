@model TimberV2.Models.Otp
@{
    ViewBag.Title = "VerifyOtp";
    Layout = null;
}

<h2>VerifyOtp</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body style=" background: #CFFDE1;">
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-4 bg-white m-auto" style="border: #5cb85c 2px solid; border-radius: 5px;">
                <h2 class="text-center pt-3 text-success">Validation Checking</h2>
                <p class="text-center text-muted lead">A mail has been sent to your given address. Type it below </p>

                <div class="mb-5" style="background-color: green; margin-left: 3%; margin-right: 3%; padding-bottom: 2px;"></div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <!-- FORM START-->
                    <!--OTP required-->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa-solid fa-key"></i></span>

                        @Html.EditorFor(model => model.otpCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <!--Button: Verify-->
                    <div class="d-grid mb-3">

                        <input type="submit" value="Verify" class="btn btn-success" />
                    </div>
                }


                </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>