<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">

    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="@Url.Content("~/Content/universal.css")" rel="stylesheet" type="text/css">
  
   
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body style=" background: #CFFDE1;">

    <!--user navbar-->
    <!-- A green horizontal navbar that becomes vertical on small screens -->

    <nav class="navbar navbar-expand-sm bg-light fixed-top" style="border-bottom: 2px green solid;">

        <div class="container-fluid">
            <a href="@Url.Action("Index","Home")" class="navbarLogo"><i class="fas fa-seedling"></i> Timber </a>

            <style>
                .customNavHeader {
                    position: fixed;
                }

                .navbarLogo {
                    font-size: 1.8rem;
                    color: green;
                    font-weight: bolder;
                    text-decoration: none;
                }

                    .navbarLogo:hover {
                        color: greenyellow;
                    }

                    .navbarLogo i {
                        padding-right: .8rem;
                        color: greenyellow;
                        ;
                        animation: floatingUpDown 3.2s linear infinite;
                    }

                .customNavLink {
                    font-size: 1rem;
                    font-weight: bold;
                    color: green;
                    margin: 0 0.2rem;
                    text-decoration: none;
                }

                    .customNavLink:hover {
                        color: greenyellow;
                    }

                .greenColor {
                    color: green;
                }

                    .greenColor:hover {
                        color: yellowgreen;
                    }
            </style>
            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link customNavLink" href="@Url.Action("DataListing","Items")">Shop</a>
                </li>
                <!--
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle customNavLink" href="#" role="button" data-bs-toggle="dropdown">Category</a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Category1</a></li>
            <li><a class="dropdown-item" href="#">Category2</a></li>
            <li><a class="dropdown-item" href="#">Category3</a></li>
        </ul>
    </li>
        -->
                <li class="nav-item">
                    <a class="nav-link customNavLink" href="@Url.Action("Contact","Home")">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link customNavLink" href="@Url.Action("About","Home")">About Us</a>
                </li>
                @if (Session["user_email"] != null)
                {
                <li class="nav-item">
                    <a class="nav-link customNavLink" href="@Url.Action("Customer_Order", "Orders")">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link customNavLink" href="@Url.Action("Customer_Payments", "Payments")">Payments</a>
                </li>
                }

                <li class="nav-item">
                    <a class="nav-link customNavLink" href="@Url.Action("UserBlogView","Blogs")">Blogs</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <!--
    <li class="nav-item" style="font-size: 1.2rem; margin-top: .3rem;">
        <a href="#"><i class="fas fa-shopping-cart greenColor"></i></a>
    </li>
    -->
                <style>
                    .header-cart a {
                        color: green;
                        font-size: 1.2rem;
                        position: relative;
                        margin-top: .8rem;
                    }

                        .header-cart a:hover {
                            color: greenyellow;
                        }

                        .header-cart a span {
                            position: absolute;
                            right: -1.2rem;
                            top: -.4rem;
                            background-color: red;
                            font-family: 'Rubik';
                            color: #fff;
                            border-radius: 50%;
                            padding: .12rem .2rem;
                            font-size: 0.6rem;
                            width: 1.2rem;
                            height: 1.2rem;
                            line-height: 1rem;
                            text-align: center;
                        }
                </style>
                @if (Session["user_email"] != null)
                {

                    <!--start cart icon-->
        

               
                        Html.RenderAction("CartCount", "User");
                 


                }

                <!--end cart icon-->
                <div class="nav-item">
                    <!--
            ==>>if user not logged in, show this icon:
            <i class="fa-solid fa-user-xmark" style=" margin-left: 2rem;font-size: 1.1rem; margin-top: .6rem; color:red"></i>
            ==>>if user logged in, show this icon:
            <i class="fa-solid fa-user-check" style=" margin-left: 2rem;font-size: 1.1rem; margin-top: .6rem; color:green"></i>

        -->
                    @if (Session["user_email"] == null)
                    {

                        <i class="fa-solid fa-user-xmark" style=" margin-left: 2rem;font-size: 1.1rem; margin-top: .6rem; color:red"></i>

                    }
                    else
                    {
                        <i class="fa-solid fa-user-check" style=" margin-left: 2rem;font-size: 1.1rem; margin-top: .6rem; color:green"></i>
                    }



                </div>
                <li class="nav-item dropdown" style="margin-right:4rem;">
                    <!--==
            >>show User name in below Login/Register if logged in and only show Dashboard and Logout
        -->
                    @if (Session["user_email"] == null)
                    {


                        <a class="nav-link dropdown-toggle customNavLink" href="#" role="button" data-bs-toggle="dropdown">Login/Register</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Login","User")">Login</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("SignUp","User")">Register</a></li>
                            <!--
                  <li><a class="dropdown-item" href="#">Dashboard</a></li>
                  <li><a class="dropdown-item" href="#">Logout</a></li>
                -->

                        </ul>}

                    else
                    {
                        <a class="nav-link dropdown-toggle customNavLink" href="#" role="button" data-bs-toggle="dropdown">@Session["user_name"]</a>
                        <ul class="dropdown-menu">

                            <li><a class="dropdown-item" href="@Url.Action("DashBoard","User")">Dashboard</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("logout","User")">Logout</a></li>


                        </ul>
                    }


                </li>
            </ul>
        </div>

    </nav>
    <div style="margin-top:5rem;"></div>
    <!--
        <img src="user.jpg" alt="" style="border:2px solid red; margin-top: 3.3rem;">

    -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <div class="container body-content">
        @RenderBody()
        <hr />
     
    </div>

    <!---->
    <!--custom javascript-->
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
    <script src="~/Scripts/script.js" type="text/javascript"></script>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>