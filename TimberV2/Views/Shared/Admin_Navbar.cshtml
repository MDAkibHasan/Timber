        <img src="user.jpg" alt="" style="border:2px solid red; margin-top: 3.3rem;">

    -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

 




